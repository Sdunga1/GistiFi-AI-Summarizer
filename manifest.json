{
  "manifest_version": 3,
  "name": "GistiFi AI Summarizer",
  "version": "2.0",

  "permissions": ["activeTab", "storage", "sidePanel", "scripting"],

  "action": {
    "default_title": "Open GistiFi Chat Panel"
  },

  "side_panel": {
    "default_path": "./html/sidepanel.html"
  },

  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["./scripts/content.js"],
      "css": ["./styles/floating-button.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "./html/options.html",

  "host_permissions": ["https://*/*", "http://*/*"]
}
